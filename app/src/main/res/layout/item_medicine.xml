<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewMedicineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paracitamol"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPrescribedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Prescribed by Dr.Binu"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMedicineName" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPrescribedBy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            style="@style/MedPrescriptionTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M:" />

        <TextView
            android:id="@+id/textViewMorningDose"
            style="@style/MedPrescriptionTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            android:id="@+id/textView7"
            style="@style/MedPrescriptionTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="AN:" />

        <TextView
            android:id="@+id/textViewAfternoonDose"
            style="@style/MedPrescriptionTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0" />

        <TextView
            android:id="@+id/textView9"
            style="@style/MedPrescriptionTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="N:" />

        <TextView
            android:id="@+id/textViewNightDose"
            style="@style/MedPrescriptionTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewRemainingDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="6 days remaining"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>